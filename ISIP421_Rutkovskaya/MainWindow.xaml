<Window x:Class="ISIP421_Rutkovskaya.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISIP421_Rutkovskaya"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="815" Closing="MainWindow_Closing" Background="#FFFFFCD6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ButtonBack" Content="Назад" HorizontalAlignment="Left" Grid.Row="0" Margin="10,0,0,0" VerticalAlignment="Center" Width="65" Height="25" Click="ButtonBack_OnClick"/>
        <Frame x:Name="MainFrame" Grid.Row="1"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Source="Pages/AuthPage.xaml"
               Navigated="MainFrame_OnNavigated" NavigationUIVisibility="Hidden"/>
        <Label Name="LiveTimeLabel" Content="%TIME%" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center" Width="150"/>
    </Grid>
</Window>
